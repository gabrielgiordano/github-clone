<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">My Teams</h1>
  </div>
  <!-- /.col-lg-12 -->
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <% if notice.present? %>
          <div class="alert"><%= notice %></div>
        <% end %>

        <% if @teams.size > 0 %>
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Team Name</th>
                <th colspan="2"></th>
              </tr>
            </thead>
            <tbody>
              <% @teams.each do |team| %>
                <tr>
                  <td><%= link_to team.name, team %></td>
                  <td>
                    <%= link_to 'Edit', edit_team_path(team) %> |
                    <%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% else %>
          <p>No teams here. Create one!</p>
        <% end %>

        <br>

        <%= link_to new_team_path do %>
          <button type="button" class="btn btn-success">New Team</button>
        <% end %>
      </div>
    </div>
  <!-- /.col-lg-12 -->
  </div>
</div>
<!-- /.row -->
