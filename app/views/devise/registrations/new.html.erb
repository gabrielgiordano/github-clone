<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="login-panel panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Register</h3>
      </div>
      <div class="panel-body">
        <%= render "devise/shared/error_messages" %>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <fieldset>
            <div class="form-group">
              <%= f.email_field :email, autofocus: true, placeholder: "E-mail", class: "form-control" %>
            </div>

            <div class="form-group">
              <% if @minimum_password_length %>
                <% placeholder = "Password (#{@minimum_password_length} characters minimum)" %>
              <% else %>
                <% placeholder = "Password" %>
              <% end %>

              <%= f.password_field :password, autocomplete: "off", placeholder: placeholder, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password Confirmation", class: "form-control" %>
            </div>

            <%= f.submit "Register", class: "btn btn-lg btn-success btn-block" %>
          </fieldset>
        <% end %>

      </div>
    </div>
    <%= render "devise/shared/links" %>
  </div>
</div>


