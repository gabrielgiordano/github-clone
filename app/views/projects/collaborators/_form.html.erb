<%= form_tag(project_collaborators_path, method: "post", class: "form-inline") do  %>
  <div class="form-group">
    <%= label_tag(:email, "Email") %>
    <%= text_field_tag(:email, "", class: "form-control") %>
  </div>

  <div class="form-group">
    <%= label_tag(:role, "Role") %>
    <%= select_tag(:role, options_for_select([["Reader", "reader"], ["Writer", "writer"], ["Owner", "owner"]]), { :class => "form-control" }) %>
  </div>

  <%= submit_tag("Create", class: "btn btn-default") %>
<% end %>
