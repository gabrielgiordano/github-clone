<% if project.errors.any? %>
  <div class="alert alert-warning alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
    <ul>
      <% project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(project) do |f| %>
  <fieldset>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, autofocus: true, placeholder: "Awesome Name", class: "form-control", disabled: true %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_field :description, placeholder: "Nice Description", class: "form-control" %>
    </div>

    <div class="form-group">
      <label>Make this project private?</label>
      <%= f.check_box :private %>
    </div>

    <%= f.submit "Update Project", class: "btn btn-success" %>
  </fieldset>
<% end %>
