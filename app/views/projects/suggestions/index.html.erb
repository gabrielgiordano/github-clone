<p id="notice"><%= notice %></p>

<h1>Suggestions</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @suggestions.each do |suggestion| %>
      <tr>
        <td><%= suggestion.title %></td>
        <td><%= suggestion.description %></td>
        <td><%= link_to "Show", project_suggestion_path(@project_id, suggestion) %></td>
        <td><%= link_to "Edit", edit_project_suggestion_path(@project_id, suggestion) %></td>
        <td><%= link_to "Destroy", project_suggestion_path(@project_id, suggestion), method: :delete, data: { confirm: "Are you sure?" } %></td>
        <td><%= link_to "Accept", project_suggestion_accept_path(@project_id, suggestion), :method=> :post %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "New Suggestion", new_project_suggestion_path(@project_id) %> |
<%= link_to "Back", project_path(@project_id) %>
