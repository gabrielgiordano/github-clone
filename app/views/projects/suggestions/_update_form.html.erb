<% if suggestion.errors.any? %>
  <div class="alert alert-warning alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
    <ul>
      <% suggestion.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_tag(project_suggestion_path(project_id, suggestion), method: "put") do %>
  <fieldset>
    <div class="form-group">
      <%= label_tag :title %>
      <%= text_field_tag :title, suggestion.title, autofocus: true, placeholder: "Suggestion title", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= label_tag :description %>
      <%= text_area_tag :description, suggestion.description, placeholder: "Nice Description", class: "form-control" %>
    </div>

    <%= submit_tag "Update Suggestion", class: "btn btn-success" %>
  </fieldset>
<% end %>
