<%= render 'project_header' %>

<%= render :layout => '/projects/project_panel', :locals => {:menu => { edit_project: true } } do %>

  <%= render 'edit_form', project: @project %>

  <br>

  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">Irreversible</div>
        <div class="panel-body">
          <p>All your work will be lost!</p>
          <p><%= button_to "Destroy this project", @project, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></p>
        </div>
      </div>
    </div>
  </div>

<% end %>
